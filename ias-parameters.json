{
	"xsappname": "ias-xsuaa-security-hybrid-usage",
	"oauth2-configuration": {
	   "redirect-uris": [
		  "https://*.cfapps.eu12.hana.ondemand.com/login/callback",
		  "https://*.cfapps.eu12.hana.ondemand.com/login/callback?authType=ias",
		  "https://*.cfapps.eu12.hana.ondemand.com/login/callback?scope=openid",
		  "https://*.cfapps.eu12.hana.ondemand.com/login/oauth2/code/*"
	   ],
	   "token-policy": {
		  "token-validity": 1800,
		  "refresh-validity": 7776000,
		  "refresh-parallel": 3,
		  "refresh-usage-after-renewal": "off",
		  "grant-types": ["client_credentials", "authorization_code"],
		  "access-token-format": "default"
	   }
	},
	"xsuaa-cross-consumption": true,
	"multi-tenant": true,
	"default-attributes": { "xsuaa-persist-corporate-idp-token": true }
 }